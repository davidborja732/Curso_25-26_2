<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_hospital_diagnosis_list" model="ir.ui.view">
        <field name="name">hospital.diagnosis.list</field>
        <field name="model">hospital.diagnosis</field>
        <field name="arch" type="xml">
            <list>
                <field name="diagnosis_date"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="type"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_hospital_diagnosis_form" model="ir.ui.view">
        <field name="name">hospital.diagnosis.form</field>
        <field name="model">hospital.diagnosis</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

                    <group>
                        <field name="diagnosis_date"/>
                        <field name="admission_id"/>
                        <field name="patient_id" readonly="1"/>
                        <field name="doctor_id" readonly="1"/>
                        <field name="type"/>
                        <field name="name"/>
                    </group>

                    <group>
                        <field name="description"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hospital_diagnosis_graph" model="ir.ui.view">
        <field name="name">hospital.diagnosis.graph</field>
        <field name="model">hospital.diagnosis</field>
        <field name="arch" type="xml">
            <graph string="Diagnósticos por médico" type="bar">
                <field name="doctor_id" type="row"/>
                <field name="type" type="col"/>
                <field name="id" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="action_hospital_diagnosis" model="ir.actions.act_window">
        <field name="name">Diagnósticos</field>
        <field name="res_model">hospital.diagnosis</field>
        <field name="view_mode">list,form,graph</field>
    </record>

</odoo>
