<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_hospital_admission_list" model="ir.ui.view">
        <field name="name">hospital.admission.list</field>
        <field name="model">hospital.admission</field>
        <field name="arch" type="xml">
            <list>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="room_id"/>
                <field name="bed"/>
                <field name="admission_date"/>
                <field name="discharge_date"/>
                <field name="days_hospitalized"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_hospital_admission_form" model="ir.ui.view">
        <field name="name">hospital.admission.form</field>
        <field name="model">hospital.admission</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="doctor_id"/>
                            <field name="admission_date"/>
                            <field name="discharge_date"/>
                            <field name="days_hospitalized" readonly="1"/>
                        </group>

                        <group>
                            <field name="room_id"/>
                            <field name="bed"/>
                            <field name="active"/>
                        </group>
                    </group>

                    <group>
                        <field name="symptoms"/>
                    </group>

                    <notebook>
                        <page string="Diagnósticos">
                            <field name="diagnosis_ids">
                                <list editable="bottom">
                                    <field name="diagnosis_date"/>
                                    <field name="name"/>
                                    <field name="type"/>
                                </list>
                            </field>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hospital_admission" model="ir.actions.act_window">
        <field name="name">Ingresos</field>
        <field name="res_model">hospital.admission</field>
        <field name="view_mode">list,form,calendar,graph</field>
    </record>

    <record id="view_hospital_admission_calendar" model="ir.ui.view">
        <field name="name">hospital.admission.calendar</field>
        <field name="model">hospital.admission</field>
        <field name="arch" type="xml">
            <calendar string="Ocupación habitaciones"
                      date_start="admission_date"
                      date_stop="discharge_date"
                      color="room_id">
                <field name="patient_id"/>
                <field name="room_id"/>
                <field name="bed"/>
            </calendar>
        </field>
    </record>

    <record id="view_hospital_admission_search" model="ir.ui.view">
        <field name="name">hospital.admission.search</field>
        <field name="model">hospital.admission</field>
        <field name="arch" type="xml">
            <search>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="room_id"/>
                <filter name="current_admissions"
                        string="Ingresos actuales"
                        domain="[('discharge_date','=',False)]"/>
            </search>
        </field>
    </record>

</odoo>
