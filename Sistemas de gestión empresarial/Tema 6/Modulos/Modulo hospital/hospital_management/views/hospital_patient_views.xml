<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_hospital_patient_list" model="ir.ui.view">
        <field name="name">hospital.patient.list</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="last_name"/>
                <field name="city"/>
                <field name="phone"/>
                <field name="current_room_id"/>
                <field name="days_hospitalized_total"/>
            </list>
        </field>
    </record>

    <record id="view_hospital_patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

                    <group>
                        <group>
                            <field name="name"/>
                            <field name="last_name"/>
                            <field name="birth_date"/>
                            <field name="phone"/>
                        </group>
                        <group>
                            <field name="street"/>
                            <field name="city"/>
                            <field name="state"/>
                            <field name="zip"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Ingresos">

                            <group>
                                <field name="current_admission_id" readonly="1"/>
                                <field name="current_room_id" readonly="1"/>
                                <field name="current_doctor_id" readonly="1"/>
                                <field name="days_hospitalized_total" readonly="1"/>
                            </group>

                            <field name="admission_ids">
                                <list editable="bottom">
                                    <field name="admission_date"/>
                                    <field name="discharge_date"/>
                                    <field name="doctor_id"/>
                                    <field name="room_id"/>
                                    <field name="bed"/>
                                    <field name="symptoms"/>
                                    <field name="days_hospitalized" readonly="1"/>
                                </list>
                            </field>

                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hospital_patient" model="ir.actions.act_window">
        <field name="name">Pacientes</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_hospital_patient_search" model="ir.ui.view">
        <field name="name">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="last_name"/>
                <filter name="currently_admitted"
                        string="Actualmente ingresados"
                        domain="[('admission_ids.discharge_date','=',False)]"/>
            </search>
        </field>
    </record>

</odoo>
