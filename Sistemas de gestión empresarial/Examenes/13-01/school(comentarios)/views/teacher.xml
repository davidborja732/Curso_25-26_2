<odoo>                                                     <!-- Nodo raíz obligatorio para cargar datos en Odoo. -->
  <data>                                                  <!-- Contenedor de registros y definiciones del módulo. -->

    <!-- explicit list view definition -->                 <!-- Comentario informativo sobre la vista lista. -->

    <record model="ir.ui.view" id="school.teacher_list">  <!-- Crea una vista en ir.ui.view con ID único. -->
      <field name="name">Profesores</field>               <!-- Nombre interno de la vista. -->
      <field name="model">school.teacher</field>          <!-- Modelo al que pertenece la vista. -->
      <field name="arch" type="xml">                      <!-- Contenido XML que define la vista. -->
        <list>                                            <!-- Vista tipo lista (tree). -->
          <field name="name"/>                            <!-- Columna: nombre del profesor. -->
          <field name="description"/>                     <!-- Columna: descripción o información adicional. -->
        </list>
      </field>
    </record>

  </data>
</odoo>
