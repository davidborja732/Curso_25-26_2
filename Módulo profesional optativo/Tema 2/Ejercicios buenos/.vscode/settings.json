{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Abrir todos los archivos del workspace",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-Command",
                "Get-ChildItem -Path . -File -Recurse | ForEach-Object { code -r $_.FullName }"
            ],
            "runOn": "folderOpen",
            "presentation": {
                "reveal": "silent",
                "echo": false,
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}